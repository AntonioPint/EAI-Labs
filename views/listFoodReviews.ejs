<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Data</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Food Data</h2>
    <table>
        <tr>
            <th>Product Id</th>
            <th>User Id</th>
            <th>Profile Name</th>
            <th>Review Score</th>
            <th>Full Review</th>
        </tr>
        <% reviews.forEach(function(review) { %>
            <tr>
                <td><%= review.productId %></td>
                <td><%= review.userId %></td>
                <td><%= review.profileName %></td>
                <td><%= review.score %></td>
                <td><%= review.text %></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
