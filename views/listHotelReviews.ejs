<!-- hotels.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Data</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Hotel Data</h2>
    <table>
        <tr>
            <th>Hotel Name</th>
            <th>Hotel Address</th>
            <th>Reviewer Nationality</th>
            <th>Negative Review</th>
            <th>Positive Review</th>
        </tr>
        <% reviews.forEach(function(review) { %>
            <tr>
                <td><%= review.hotelName %></td>
                <td><%= review.hotelAddress %></td>
                <td><%= review.reviewerNationality %></td>
                <td><%= review.negativeReview %></td>
                <td><%= review.positiveReview %></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
